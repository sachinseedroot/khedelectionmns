<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="helpLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:gravity">fill_horizontal</item>
        <item name="android:textColor">#F6730E</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="linearDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#000099</item>
        <item name="android:padding">0.5dp</item>
    </style>

</resources>
