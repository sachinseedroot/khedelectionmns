<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="This is TITLE"
    android:id="@+id/rec_titl"
    android:textColor="@color/deepsaffron"
    android:textSize="20sp"/>

   <RelativeLayout
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="This is TITLE: "
           android:id="@+id/rec_rakk1"
           android:textColor="@color/royalblue"
           android:textSize="15sp"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="This is TITLE"
           android:layout_toRightOf="@+id/rec_rakk1"
           android:id="@+id/rec_rakk2"
           android:textColor="@color/green"
           android:textSize="15sp"/>
   </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is TITLE: "
            android:id="@+id/rec_amt1"
            android:textColor="@color/royalblue"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is TITLE"
            android:layout_toRightOf="@+id/rec_amt1"
            android:id="@+id/rec_amt2"
            android:textColor="@color/green"
            android:textSize="15sp"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/royalblue" />
</LinearLayout>