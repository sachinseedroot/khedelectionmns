<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:background="@color/royalblue"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:id="@+id/backarrowpartyworksconTV"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="@string/backarrow"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="संपर्क"
                android:id="@+id/reg_form"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="15dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/vkch"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:textColor="@color/royalblue"
                android:text="वैभव खेडेकर "/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/im"

                    android:layout_marginRight="15dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/mns"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="महाराष्ट्र नवनिर्माण सेना नेते " />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greycard" />
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/fb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fb"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:layout_marginLeft="5dp"
                android:text="https://m.facebook.com/Vaibhav-Khedekar-1978636035610455/"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/em"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/call"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/em"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:layout_marginLeft="5dp"
                android:text="9422595900"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addtocontact"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/wwa"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/wa"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/wwa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="9422595900"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>